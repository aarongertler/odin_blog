<%= form_for(@article, html: {multipart: true}) do |f| %>
<!-- multipart is necessary if we want to post new images and new articles at the same time -->
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url %><br />
      <!-- This didn't display until we added "=", of course -->
    <% end %>
    <%= f.label :image, "Attach a New Image" %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
    <!-- After making these, we'll need to create the tag_list method in article.rb -->
  </p>
  <p>
    <%= f.submit %>   
    <!-- Makes a "Create" button automatically -->
  </p>
<% end %>
