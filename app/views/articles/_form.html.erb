<%= form_for(@article) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
    <!-- After making these, we'll need to create the tag_list method in article.rb -->
  </p>
  <p>
    <%= f.submit %>   
    <!-- Makes a "Create" button automatically -->
  </p>
<% end %>
